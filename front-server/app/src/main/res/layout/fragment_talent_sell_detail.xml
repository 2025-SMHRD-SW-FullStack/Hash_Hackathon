<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <!-- 작성자/시간 -->
    <TextView
        android:id="@+id/tvDetailInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 · 2025-08-07"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 내용 -->
    <TextView
        android:id="@+id/tvDetailContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgDetailPost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- 가격 -->
    <TextView
        android:id="@+id/tvDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₩10,000"
        android:textSize="16sp"
        android:textColor="#FF5722"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailContent"
        app:layout_constraintStart_toStartOf="parent"/>
    <!-- (옵션) 관심 버튼 -->

    <!-- 게시글 이미지 -->
    <ImageView
        android:id="@+id/imgDetailPost"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/tvDetailInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하트+채팅버튼 수평 정렬 -->
    <LinearLayout
        android:id="@+id/layoutDetailButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvDetailPrice"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imgDetailFavorite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="즐겨찾기"
            android:src="@drawable/love_icon_outline" />

    </LinearLayout>

    <Button
        android:id="@+id/btnChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:text="1:1 채팅하기"
        app:layout_constraintBottom_toBottomOf="@+id/layoutDetailButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvDetailPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailContent" />

</androidx.constraintlayout.widget.ConstraintLayout>
