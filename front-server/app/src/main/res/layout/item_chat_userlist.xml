<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="12dp"
    android:background="#FFFFFF">

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/ChatImg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/profile_default_t" />

    <!-- 상대방 닉네임 -->
    <TextView
        android:id="@+id/tvOpponentNick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="사용자 이름"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ChatImg"
        app:layout_constraintTop_toTopOf="@id/ChatImg"
        app:layout_constraintEnd_toStartOf="@id/tvTime" />

    <!-- 최근 메시지 -->
    <TextView
        android:id="@+id/tvLastMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="최근 메시지 내용입니다"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvOpponentNick"
        app:layout_constraintTop_toBottomOf="@id/tvOpponentNick"
        app:layout_constraintEnd_toStartOf="@id/tvUnreadCount"
        app:layout_constraintBottom_toBottomOf="@id/ChatImg" />

    <!-- 시간 표시 -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오전 10:15"
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/tvOpponentNick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvOpponentNick" />

    <!-- 안읽은 메시지 뱃지 -->
    <TextView
        android:id="@+id/tvUnreadCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_unread_count_badge"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ChatImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTime"
        android:layout_marginTop="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
