<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.Mypage.MyPageFragment">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이 페이지"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 프로필 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/ivMyUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_circle_bg"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_default_t" />

                <!-- 카메라 아이콘 -->
                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:background="@drawable/profile_circle_bg"
                    android:clickable="true"
                    android:contentDescription="사진 변경"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/camera_icon" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etMyUserNick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="닉네임"
                        android:inputType="textPersonName"
                        android:text="사용자 이름"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@id/editIcon"
                        app:layout_constraintStart_toEndOf="@id/image_profile"
                        app:layout_constraintTop_toTopOf="@+id/image_profile" />

                    <!-- 연필 아이콘 버튼 -->
                    <ImageView
                        android:id="@+id/editIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/profile_circle_bg"
                        android:contentDescription="닉네임 수정"
                        android:padding="3dp"
                        android:paddingEnd="1dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/pencil_icon"
                        app:layout_constraintBottom_toBottomOf="@id/etMyUserNick"
                        app:layout_constraintStart_toEndOf="@id/etMyUserNick"
                        app:layout_constraintTop_toTopOf="@id/etMyUserNick" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMyUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 나의 거래 카드 (소제목 + 항목 포함) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tradeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/profileCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!-- 소제목: 나의 거래 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="나의 재능 거래"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 항목 1: 판매내역 -->
            <LinearLayout
                android:id="@+id/layout_Sell"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="판매내역"
                    android:src="@drawable/receipt_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="12dp"
                    android:text="판매 내역"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="화살표"
                    android:src="@drawable/arrow_icon" />
            </LinearLayout>

            <!-- 항목 2: 구매내역 -->
            <LinearLayout
                android:id="@+id/layout_buy"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="구매내역"
                    android:src="@drawable/cart_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="12dp"
                    android:text="구매 내역"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="화살표"
                    android:src="@drawable/arrow_icon" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnUserDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#5D5D5D"
        android:text="회원 탈퇴"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toStartOf="@+id/tradeCard"
        app:layout_constraintTop_toBottomOf="@+id/tradeCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
