<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/popup_background"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <LinearLayout
        android:id="@+id/option_chungjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/text_chungjang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="충장동"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/check_chungjang"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_check"
            android:visibility="gone"
            app:tint="@color/market_green" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_gwangju"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/text_gwangju"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="광주광역시"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/check_gwangju"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_check"
            android:visibility="gone"
            app:tint="@color/market_green" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/text_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="전국"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/check_all"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_check"
            android:visibility="gone"
            app:tint="@color/market_green" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            android:id="@+id/text_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="동네 설정"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/check_reset"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_check"
            android:visibility="gone"
            app:tint="@color/market_green" />
    </LinearLayout>



</LinearLayout>